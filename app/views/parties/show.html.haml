%h3
  = @party.name.upcase + " PARTY"
  = link_to 'Edit', edit_party_path

%p
  = @party.location 
  At:
  = @party.occurence
%p
  Hosted by:
  = @party.user.name

%p
  %strong  Guest list
  - @party.guests.each do |guest|
    %p[guest]
      = guest.user.name
      = link_to icon('remove') ,  guest, data: {:confirm => 'Are you sure?'}, :method => :delete

= link_to 'Add Guest', new_party_guest_path(@party)
