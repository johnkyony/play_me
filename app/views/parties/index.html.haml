.widget.stacked.widget-table.action-table
  .widget-header
    %i.icon-th-list
    %h3 Parties
    = link_to icon('+', "Add New Party") , new_party_path, class: "btn btn-primary"
  .widget-content
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th Party
          %th Location
          %th Occurence
          %th Hosted by
      %tbody
        - @parties.each do |party|
          %tr
            %td= link_to party.name, party_path(party)
            %td= party.location
            %td= party.occurence
            %td= party.user.name
