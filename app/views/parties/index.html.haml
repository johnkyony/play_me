.tab-content
  .span7
    .widget.stacked.widget-table.action-table
      .widget-header
        %i.icon-th-list
        %h3 Party
      / /widget-header
      .widget-content
        %table.table.table-striped.table-bordered
          %thead
            %tr
              %th Name
              %th Location
              %th Occurence
          %tbody
            - @parties.each do |party|
              %tr
                %td= link_to party.name, party_path(party)
                %td= party.location
                %td= party.occurence

